{
	"$schema": "https://getcomposer.org/schema.json",
	"name": "dekode/block-theme",
	"description": "Block Theme",
	"type": "wordpress-theme",
	"license": "GPL-3.0-or-later",
	"version": "1.0.0",
	"require-dev": {
		"wp-cli/i18n-command": "~2.6.0"
	},
	"scripts": {
		"make-pot": [
			"npm run build",
			"wp i18n make-pot . languages/block-theme.pot --exclude=.turbo,node_modules,src,vendor,theme.json,t2.json"
		],
		"update-po": [
			"wp i18n update-po languages/block-theme.pot languages/"
		],
		"make-mo": [
			"wp i18n make-mo languages/"
		],
		"make-json": [
			"npm run build",
			"wp i18n make-json languages/ --no-purge"
		],
		"make-php": [
			"wp i18n make-php languages/"
		],
		"lint": [
			"../../../vendor/bin/phpcs ./"
		]
	}
}
