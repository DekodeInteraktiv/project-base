{
	"name": "@dekode/project-base",
	"private": true,
	"engines": {
		"node": "20",
		"npm": ">=10"
	},
	"packageManager": "npm@10.7.0",
	"workspaces": [
		"packages/mu-plugins/*",
		"packages/plugins/*",
		"packages/themes/*"
	],
	"devDependencies": {
		"@csstools/postcss-global-data": "^3.1.0",
		"@wordpress/env": "^10.33.0",
		"@wordpress/scripts": "^30.26.0",
		"autoprefixer": "^10.4.21",
		"browser-sync": "^3.0.4",
		"cssnano": "^7.1.1",
		"dotenv": "^17.2.3",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.5",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.5.6",
		"postcss-custom-media": "^11.0.6",
		"postcss-discard-comments": "^7.0.4",
		"postcss-import": "^16.1.1",
		"postcss-media-minmax": "^5.0.0",
		"postcss-mixins": "^12.1.2",
		"postcss-nesting": "^13.0.2",
		"postcss-url": "^10.1.3",
		"prettier": "^3.6.2",
		"turbo": "^2.5.8"
	},
	"scripts": {
		"create-block": "cd packages/plugins && npx dekodeinteraktiv/create-project-base-block",
		"create-innerblock-block": "cd packages/plugins && npx dekodeinteraktiv/create-project-base-block --template innerblocks",
		"prepare": "husky",
		"build": "turbo run build",
		"start": "turbo run start",
		"start-sync": "npm-run-all --parallel start browsersync:start",
		"clean": "turbo run clean && rm -rf node_modules",
		"format": "prettier --write .",
		"i18n:make-pot": "turbo run i18n:make-pot",
		"lint": "npm-run-all --parallel lint:*",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:format": "prettier --check .",
		"lint-staged": "lint-staged",
		"browsersync:start": "node browsersync.config.js",
		"wp-env": "wp-env",
		"update-dependencies": "npx syncpack update && npm run format"
	},
	"lint-staged": {
		"*.css": [
			"wp-scripts lint-style"
		],
		"*.{js,ts,tsx}": [
			"prettier --write .",
			"wp-scripts lint-js"
		]
	}
}
